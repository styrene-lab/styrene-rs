{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://weft.tak/contracts/v2/payload-envelope.schema.json",
  "title": "LXMF Payload Envelope v2",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "_lxmf_fields_msgpack_b64": {
      "type": "string",
      "minLength": 1
    },
    "2": {
      "oneOf": [
        { "type": "object" },
        { "type": "array" }
      ]
    },
    "9": {
      "type": "array"
    },
    "12": {},
    "14": {
      "type": "object"
    },
    "16": {
      "type": "object"
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["name", "data"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "data": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 255
                }
              },
              {
                "type": "string",
                "pattern": "^(hex:|HEX:|base64:|BASE64:).+"
              }
            ]
          }
        }
      }
    },
    "paper": {
      "type": "object"
    },
    "announce": {
      "type": "object"
    },
    "peer_snapshot": {
      "type": "object"
    },
    "interface_snapshot": {
      "type": "object"
    }
  }
}
