{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://weft.tak/contracts/sdk/v2/rpc/sdk_release_c_methods.schema.json",
  "title": "LXMF SDK RPC Release C Domain Methods v2",
  "oneOf": [
    { "$ref": "#/$defs/request" },
    { "$ref": "#/$defs/response_error" }
  ],
  "$defs": {
    "rpc_id": {
      "oneOf": [
        { "type": "string", "minLength": 1 },
        { "type": "integer", "minimum": 0 }
      ]
    },
    "rpc_error": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string", "minLength": 1 },
        "message": { "type": "string", "minLength": 1 },
        "machine_code": { "type": "string", "pattern": "^SDK_[A-Z]+_[A-Z0-9_]+$" },
        "category": { "type": "string", "minLength": 1 },
        "retryable": { "type": "boolean" },
        "is_user_actionable": { "type": "boolean" },
        "details": { "type": "object", "additionalProperties": true },
        "cause_code": { "type": "string", "pattern": "^SDK_[A-Z]+_[A-Z0-9_]+$" },
        "extensions": { "type": "object", "additionalProperties": true }
      }
    },
    "extension_map": {
      "type": "object",
      "additionalProperties": true
    },
    "request": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "method", "params"],
      "properties": {
        "id": { "$ref": "#/$defs/rpc_id" },
        "method": {
          "type": "string",
          "enum": [
            "sdk_identity_list_v2",
            "sdk_identity_activate_v2",
            "sdk_identity_import_v2",
            "sdk_identity_export_v2",
            "sdk_identity_resolve_v2",
            "sdk_paper_encode_v2",
            "sdk_paper_decode_v2",
            "sdk_command_invoke_v2",
            "sdk_command_reply_v2",
            "sdk_voice_session_open_v2",
            "sdk_voice_session_update_v2",
            "sdk_voice_session_close_v2"
          ]
        },
        "params": { "type": "object" }
      },
      "allOf": [
        {
          "if": {
            "properties": { "method": { "const": "sdk_identity_list_v2" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "params": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "extensions": { "$ref": "#/$defs/extension_map" }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "sdk_identity_activate_v2" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "params": {
                "type": "object",
                "additionalProperties": false,
                "required": ["identity"],
                "properties": {
                  "identity": { "type": "string", "minLength": 1 },
                  "extensions": { "$ref": "#/$defs/extension_map" }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "sdk_identity_import_v2" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "params": {
                "type": "object",
                "additionalProperties": false,
                "required": ["bundle_base64"],
                "properties": {
                  "bundle_base64": { "type": "string", "minLength": 1 },
                  "passphrase": { "type": ["string", "null"] },
                  "extensions": { "$ref": "#/$defs/extension_map" }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "sdk_identity_export_v2" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "params": {
                "type": "object",
                "additionalProperties": false,
                "required": ["identity"],
                "properties": {
                  "identity": { "type": "string", "minLength": 1 },
                  "extensions": { "$ref": "#/$defs/extension_map" }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "sdk_identity_resolve_v2" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "params": {
                "type": "object",
                "additionalProperties": false,
                "required": ["hash"],
                "properties": {
                  "hash": { "type": "string", "minLength": 1 },
                  "extensions": { "$ref": "#/$defs/extension_map" }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "sdk_paper_encode_v2" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "params": {
                "type": "object",
                "additionalProperties": false,
                "required": ["message_id"],
                "properties": {
                  "message_id": { "type": "string", "minLength": 1 },
                  "extensions": { "$ref": "#/$defs/extension_map" }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "sdk_paper_decode_v2" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "params": {
                "type": "object",
                "additionalProperties": false,
                "required": ["uri"],
                "properties": {
                  "uri": { "type": "string", "minLength": 1 },
                  "transient_id": { "type": ["string", "null"] },
                  "destination_hint": { "type": ["string", "null"] },
                  "extensions": { "$ref": "#/$defs/extension_map" }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "sdk_command_invoke_v2" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "params": {
                "type": "object",
                "additionalProperties": false,
                "required": ["command", "payload"],
                "properties": {
                  "command": { "type": "string", "minLength": 1 },
                  "target": { "type": ["string", "null"] },
                  "payload": {},
                  "timeout_ms": { "type": ["integer", "null"], "minimum": 1 },
                  "extensions": { "$ref": "#/$defs/extension_map" }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "sdk_command_reply_v2" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "params": {
                "type": "object",
                "additionalProperties": false,
                "required": ["correlation_id", "accepted", "payload"],
                "properties": {
                  "correlation_id": { "type": "string", "minLength": 1 },
                  "accepted": { "type": "boolean" },
                  "payload": {},
                  "extensions": { "$ref": "#/$defs/extension_map" }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "sdk_voice_session_open_v2" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "params": {
                "type": "object",
                "additionalProperties": false,
                "required": ["peer_id"],
                "properties": {
                  "peer_id": { "type": "string", "minLength": 1 },
                  "codec_hint": { "type": ["string", "null"] },
                  "extensions": { "$ref": "#/$defs/extension_map" }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "sdk_voice_session_update_v2" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "params": {
                "type": "object",
                "additionalProperties": false,
                "required": ["session_id", "state"],
                "properties": {
                  "session_id": { "type": "string", "minLength": 1 },
                  "state": {
                    "type": "string",
                    "enum": ["new", "ringing", "active", "holding", "closed", "failed"]
                  },
                  "extensions": { "$ref": "#/$defs/extension_map" }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "sdk_voice_session_close_v2" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "params": {
                "type": "object",
                "additionalProperties": false,
                "required": ["session_id"],
                "properties": {
                  "session_id": { "type": "string", "minLength": 1 },
                  "extensions": { "$ref": "#/$defs/extension_map" }
                }
              }
            }
          }
        }
      ]
    },
    "response_error": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "error"],
      "properties": {
        "id": { "$ref": "#/$defs/rpc_id" },
        "error": { "$ref": "#/$defs/rpc_error" }
      }
    }
  }
}
