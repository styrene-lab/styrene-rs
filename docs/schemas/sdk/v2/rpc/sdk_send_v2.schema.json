{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://weft.tak/contracts/sdk/v2/rpc/sdk_send_v2.schema.json",
  "title": "LXMF SDK RPC sdk_send_v2 v2",
  "oneOf": [
    { "$ref": "#/$defs/request" },
    { "$ref": "#/$defs/response_ok" },
    { "$ref": "#/$defs/response_error" }
  ],
  "$defs": {
    "rpc_id": {
      "oneOf": [
        { "type": "string", "minLength": 1 },
        { "type": "integer", "minimum": 0 }
      ]
    },
    "rpc_error": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string", "minLength": 1 },
        "message": { "type": "string", "minLength": 1 },
        "machine_code": { "type": "string", "pattern": "^SDK_[A-Z]+_[A-Z0-9_]+$" },
        "category": { "type": "string", "minLength": 1 },
        "retryable": { "type": "boolean" },
        "is_user_actionable": { "type": "boolean" },
        "details": { "type": "object", "additionalProperties": true },
        "cause_code": { "type": "string", "pattern": "^SDK_[A-Z]+_[A-Z0-9_]+$" },
        "extensions": { "type": "object", "additionalProperties": true }
      }
    },
    "request": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "method", "params"],
      "properties": {
        "id": { "$ref": "#/$defs/rpc_id" },
        "method": { "const": "sdk_send_v2" },
        "params": {
          "type": "object",
          "additionalProperties": false,
          "required": ["id", "source", "destination", "content"],
          "properties": {
            "id": { "type": "string", "minLength": 1 },
            "source": { "type": "string", "minLength": 1 },
            "destination": { "type": "string", "minLength": 1 },
            "title": { "type": "string" },
            "content": { "type": "string", "minLength": 1 },
            "fields": { "type": ["object", "null"], "additionalProperties": true },
            "method": { "type": ["string", "null"] },
            "stamp_cost": { "type": ["integer", "null"], "minimum": 0 },
            "include_ticket": { "type": ["boolean", "null"] },
            "try_propagation_on_fail": { "type": ["boolean", "null"] }
          }
        }
      }
    },
    "response_ok": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "result"],
      "properties": {
        "id": { "$ref": "#/$defs/rpc_id" },
        "result": {
          "type": "object",
          "additionalProperties": true,
          "required": ["message_id"],
          "properties": {
            "message_id": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "response_error": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "error"],
      "properties": {
        "id": { "$ref": "#/$defs/rpc_id" },
        "error": { "$ref": "#/$defs/rpc_error" }
      }
    }
  }
}
