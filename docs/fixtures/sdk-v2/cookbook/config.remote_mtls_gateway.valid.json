{
  "profile": "desktop-full",
  "bind_mode": "remote",
  "auth_mode": "mtls",
  "overflow_policy": "reject",
  "event_stream": {
    "max_poll_events": 256,
    "max_event_bytes": 65536,
    "max_batch_bytes": 1048576,
    "max_extension_keys": 32
  },
  "idempotency_ttl_ms": 86400000,
  "redaction": {
    "enabled": true,
    "sensitive_transform": "redact"
  },
  "rpc_backend": {
    "listen_addr": "0.0.0.0:9888",
    "read_timeout_ms": 5000,
    "write_timeout_ms": 5000,
    "max_header_bytes": 16384,
    "max_body_bytes": 1048576,
    "mtls_auth": {
      "ca_bundle_path": "/etc/lxmf/ca.pem",
      "require_client_cert": true,
      "allowed_san": "lxmf-client.internal",
      "client_cert_path": "/etc/lxmf/server.pem",
      "client_key_path": "/etc/lxmf/server.key"
    }
  }
}
